{
  "name": "setup-liquibase",
  "version": "1.0.0",
  "description": "Set up your GitHub Actions workflow with a specific version of Liquibase",
  "main": "dist/index.js",
  "scripts": {
    "build": "ncc build src/index.ts -o dist --source-map --license licenses.txt",
    "test": "jest",
    "lint": "eslint src/**/*.ts",
    "format": "prettier --write src/**/*.ts",
    "package": "npm run build && npm test"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/liquibase/setup-liquibase.git"
  },
  "keywords": [
    "actions",
    "liquibase",
    "setup",
    "database",
    "migration"
  ],
  "author": "Liquibase",
  "license": "Apache-2.0",
  "dependencies": {
    "@actions/core": "^1.10.1",
    "@actions/exec": "^1.1.1",
    "@actions/http-client": "^2.2.1",
    "@actions/io": "^1.1.3",
    "@actions/tool-cache": "^2.0.1",
    "semver": "^7.6.0"
  },
  "devDependencies": {
    "@types/jest": "^29.5.12",
    "@types/node": "^22.15.29",
    "@types/semver": "^7.5.8",
    "@typescript-eslint/eslint-plugin": "^8.34.0",
    "@typescript-eslint/parser": "^8.33.1",
    "@vercel/ncc": "^0.38.1",
    "eslint": "^9.28.0",
    "eslint-plugin-jest": "^28.12.0",
    "jest": "^29.7.0",
    "prettier": "^3.2.5",
    "ts-jest": "^29.1.2",
    "typescript": "^5.4.3"
  },
  "overrides": {
    "inflight": "npm:@isaacs/inflight@^1.0.6",
    "glob": "^10.0.0",
    "rimraf": "^5.0.0"
  }
}
